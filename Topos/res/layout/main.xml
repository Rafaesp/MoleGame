<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenubackground">
    <LinearLayout android:layout_height="fill_parent" 
	    android:id="@+id/linearLayoutMain" 
	    android:layout_width="fill_parent" 
	    android:orientation="vertical" 
	    android:layout_weight="0">
	        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:text="@string/app_name" android:textSize="50dip"></TextView>
	        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnPlay" android:layout_gravity="center_horizontal" android:text="@string/btnPlay"></Button>
	        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnContinue" android:layout_gravity="center_horizontal" android:text="@string/btnContinue"></Button>
	        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnRanking" android:layout_gravity="center_horizontal" android:text="@string/btnRanking"></Button>
	        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/prefButton" android:layout_gravity="center_horizontal" android:text="@+string/pref"></Button>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/linearLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp" 
	    android:orientation="horizontal" 
	    android:layout_gravity="bottom" 
	    >
</LinearLayout>
</LinearLayout>
